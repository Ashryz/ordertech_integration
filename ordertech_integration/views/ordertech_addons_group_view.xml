<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="addons_group_search_view" model="ir.ui.view">
        <field name="name">addons.group.search.view</field>
        <field name="model">addons.group</field>
        <field name="arch" type="xml">
            <search>
                <filter name="addons_to_sync" string="To-Sync" domain="[('ordertech_addonsId','=',False)]"/>
            </search>
        </field>
    </record>
    <record id="addons_item_search_view" model="ir.ui.view">
        <field name="name">addons.item.search.view</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <search>
                <filter name="item_to_sync" string="To-Sync" domain="[('ordertech_itemId','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="addons_group_view_form" model="ir.ui.view">
        <field name="name">addons.group.view.form</field>
        <field name="model">addons.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                            <field name="ordertech_addonsId" readonly="1" invisible="not ordertech_addonsId"/>
                        </group>
                        <group>
                            <field name="slug"/>
                            <field name="limit_min"/>
                            <field name="limit_max"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="addons_group_view_tree" model="ir.ui.view">
        <field name="name">addons.group.view.tree</field>
        <field name="model">addons.group</field>
        <field name="arch" type="xml">
            <list>
                <header>
                    <button name="sync_data_to_ordertech" string="Sync OrderTech" type="object"/>
                </header>
                <field name="name"/>
                <field name="company_id" string="Restaurant"/>
                <field name="ordertech_addonsId" string="OrderTech AddonsId"/>
                <field name="limit_min"/>
                <field name="limit_max"/>
            </list>
        </field>
    </record>
    <record id="addon_item_tree_view" model="ir.ui.view">
        <field name="name">addons.item.view.tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <list create="0">
                <header>
                    <button name="sync_data_to_ordertech" string="Sync OrderTech" type="object"/>
                </header>
                <field name="name"/>
                <field name="company_id" string="Restaurant"/>
                <field name="ordertech_itemId" string="OrderTech itemId"/>
            </list>
        </field>
    </record>
    <record id="ordertech_addons_group_action" model="ir.actions.act_window">
        <field name="name">Addons-Group</field>
        <field name="res_model">addons.group</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="addons_group_search_view"/>
        <field name="context">{'search_default_addons_to_sync':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Data to sync Found!
            </p>
        </field>
    </record>
    <record id="ordertech_addons_item_action" model="ir.actions.act_window">
        <field name="name">Addons-item</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="addon_item_tree_view"/>
        <field name="search_view_id" ref="addons_item_search_view"/>
        <field name="domain">[('pos_categ_ids','ilike','addons'),('available_in_pos','=',True)]</field>
        <field name="context">{'search_default_item_to_sync':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Data to sync Found!
            </p>
        </field>
    </record>
    <menuitem id="ordertech_addons_menu"
              name="Addons-Group"
              sequence="2"
              parent="ordertech_menu_root_menu"/>
    <menuitem id="ordertech_groups_menu"
              name="Groups"
              sequence="1"
              parent="ordertech_addons_menu"
              action="ordertech_addons_group_action"/>
    <menuitem id="ordertech_items_menu"
              name="items"
              sequence="2"
              parent="ordertech_addons_menu"
              action="ordertech_addons_item_action"/>
</odoo>