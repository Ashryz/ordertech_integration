<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">view.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="OrderTech Information" name="ordertech_info">
                    <group>
                        <group>
                            <field name="ordertech_customerId"  string="OrderTech CustomerId" readonly="1" invisible="not ordertech_customerId"/>
                            <field name="ordertech_tenantId"  string="OrderTech TenantId" readonly="1" invisible="not ordertech_tenantId"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>