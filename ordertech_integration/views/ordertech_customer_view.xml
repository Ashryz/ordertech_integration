<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="ordertech_customer_tree_view" model="ir.ui.view">
        <field name="name">ordertech.customer.tree.view</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list>
                 <header>
                    <button name="sync_data_to_ordertech" string="Sync OrderTech" type="object"/>
                </header>
                <field name="name"/>
                <field name="phone"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="ordertech_customerId"/>
            </list>
        </field>
    </record>
    <record id="ordertech_customer_action" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('customer_rank','>',0)]</field>
        <field name="context">{'default_customer_rank': 1}</field>
        <field name="view_id" ref="ordertech_customer_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new customer!
            </p>
        </field>
    </record>
    <menuitem id="ordertech_customer_root_menu"
              name="Customers"
              sequence="2"
              parent="ordertech_root"/>
    <menuitem id="ordertech_customer_menu"
              name="Customers"
              sequence="1"
              parent="ordertech_customer_root_menu"
              action="ordertech_customer_action"/>
</odoo>