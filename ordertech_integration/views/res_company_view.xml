<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_company_form_inherit" model="ir.ui.view">
        <field name="name">view.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_info']" position="after">
                <page string="OrderTech Information" name="ordertech_info">
                    <group>
                        <group>
                            <field name="is_restaurant"/>
                            <field name="open_time" widget="float_time"/>
                            <field name="close_time" widget="float_time"/>
                        </group>
                        <group>
                            <field name="is_branch"/>
                            <field name="slug" required="is_branch"/>
                            <field name="notes" required="is_branch"/>
                            <field name="delivery_radius_km" required="is_branch"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="ordertech_tenantId" stirng="OrderTech TenantId" readonly="1"
                                   invisible="not ordertech_tenantId"/>
                        </group>
                        <group>
                            <field name="ordertech_tenant_branchId" string="OrderTech BranchId" readonly="1"
                                   invisible="not ordertech_tenant_branchId"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>