<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="ordertech_instance_view_tree" model="ir.ui.view">
        <field name="name">ordertech.instance.view.tree</field>
        <field name="model">ordertech.configration</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="state" decoration-success="state == 'connected'"  widget="badge"/>
            </list>
        </field>
    </record>

    <record id="ordertech_instance_action" model="ir.actions.act_window">
        <field name="name">ordertech.instance.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ordertech.configration</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                    Create a new OrderTech Instance
              </p>
        </field>
    </record>

    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem id="ordertech_root"
              name="OrderTech"
              web_icon="ordertech_integration,static/description/icon.png"/>

    <!-- This Menu Item Must have a parent -->
    <menuitem id="ordertech_config_menu"
              name="Configration"
              parent="ordertech_root"
              sequence="10"/>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="ordertech_config_instance"
              name="OrderTech Instance"
              parent="ordertech_config_menu"
              sequence="1"
              action="ordertech_instace_action"/>
</odoo>