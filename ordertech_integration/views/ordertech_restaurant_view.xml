<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="ordertech_restaurant_view_tree" model="ir.ui.view">
        <field name="name">ordertech.restaurant.view.tree</field>
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <list create="0">
                <header>
                    <button name="sync_data_to_ordertech" string="Sync OrderTech" type="object"/>
                </header>
                <field name="name" string="Restaurant"/>
                <field name="ordertech_tenantId" string="TenantId"/>
                <field name="opening_time" widget="float_time"/>
                <field name="closing_time" widget="float_time"/>
            </list>
        </field>
    </record>

    <record id="ordertech_restaurant_action" model="ir.actions.act_window">
        <field name="name">Restaurants</field>
        <field name="res_model">res.company</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="ordertech_restaurant_view_tree"/>
        <field name="domain">[('is_restaurant','=',True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Restaurant Found. Create a new Restaurant!
            </p>
        </field>
    </record>
    <record id="base.action_res_company_form" model="ir.actions.act_window">
        <field name="view_id" ref="base.view_company_tree"/>
    </record>
    <menuitem id="ordertech_restaurant_menu_root"
              name="Restaurants &amp; Branches"
              sequence="1"
              parent="ordertech_root"/>
    <menuitem id="ordertech_restaurant_menu"
              name="Restaurant"
              sequence="1"
              parent="ordertech_restaurant_menu_root"
              action="ordertech_restaurant_action"/>

</odoo>